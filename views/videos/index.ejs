<%- partial('../header/header.ejs') %>
<hr>
  <%- partial ('../nav/subnav.ejs') %>

    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
        <% for(video in allVideos) { %>
          <div class="row admin-rows">
               <div class="row">
                    <div id="title"  class="col-xs-12">
                      <h5>  <%= allVideos[video].title %> </h5>
                        <hr>
                    </div>

                </div>

                <div class="row">

                   <div class="col-xs-3 video-icon" data-toggle="modal" data-target="#video<%= allVideos[video].id %>">
                        <img src="<%= allVideos[video].thumbNail %>" width="100%">
                    </div>
                <div class="col-xs-9">
                    <div class="row">
                        <div id="artist"  >
                          <b>Artist: <%= allVideos[video].artist %> </b>
                        </div>
                    </div>

                    <div class="row">
                        <div id="description">
                          <b> Description: </b> <%= allVideos[video].description %>
                        </div>
                    </div>

                    <div class="row">
                          <b>Genre:</b><span class="genre"><%= allVideos[video].genre %></span>
                    </div>

                </div>
                <hr>
              </div>
              <hr>
          </div>


          <div id="video<%= allVideos[video].id %>" class="modal" >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title"> <%= allVideos[video].title %> </h4>
                </div>
                <div class="modal-body">
                  <iframe width="95%" height="95%" src="<%= allVideos[video].videoUrl %>" frameborder="0" allowfullscreen></iframe>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
        </div>

        <% } %>
          </div>

      </div>
